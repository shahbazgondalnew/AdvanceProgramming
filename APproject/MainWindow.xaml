<Window x:Class="APproject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login Page" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Username:" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="txtUsername" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Margin="5"/>

        <Label Content="Password:" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="5,10,0,0" RenderTransformOrigin="0.507,0.009"/>

        <Button Content="Login" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Width="80" Margin="0,59,315,0" Click="Login_Click"/>
    </Grid>
</Window>
   
    