<Window x:Class="APproject.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product" Height="300" Width="400">
    <Grid>
        
        <StackPanel Margin="10">
            <TextBlock Text="Product Name:"/>
            <TextBox x:Name="productNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Price:"/>
            <TextBox x:Name="priceTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Policy:"/>
            <TextBox x:Name="policyTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Batch:"/>
            <TextBox x:Name="batchTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Expire Date:"/>
            <DatePicker x:Name="expireDatePicker" Margin="0,0,0,10"/>

            <TextBlock Text="Quality:"/>
            <TextBox x:Name="qualityTextBox" Margin="0,0,0,10"/>

            
            <Button Content="Save" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
