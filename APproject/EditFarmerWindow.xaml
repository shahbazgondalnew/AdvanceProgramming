<!-- EditFarmerWindow.xaml -->
<Window x:Class="APproject.EditFarmerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Farmer" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Name:" Margin="5"/>
        <TextBox x:Name="txtName" Grid.Row="0" Margin="5" />

        <TextBlock Grid.Row="1" Text="Contact:" Margin="5"/>
        <TextBox x:Name="txtContact" Grid.Row="1" Margin="5" />

        <TextBlock Grid.Row="2" Text="Address:" Margin="5"/>
        <TextBox x:Name="txtAddress" Grid.Row="2" Margin="5" />

        <TextBlock Grid.Row="3" Text="Balance:" Margin="5"/>
        <TextBox x:Name="txtBalance" Grid.Row="3" Margin="5" />

        <Button Content="Save" Grid.Row="4" Margin="5" Click="SaveButton_Click"/>
    </Grid>
</Window>
